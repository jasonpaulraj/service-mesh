PROMETHEUS_PASSWORD=your_prometheus_password

# Grafana
GRAFANA_URL=your_grafana_url
#GRAFANA_API_KEY=your_grafana_api_key
GRAFANA_API_KEY=your_grafana_api_key
GRAFANA_USERNAME=your_grafana_username
GRAFANA_PASSWORD=your_grafana_password

# Proxmox

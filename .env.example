# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME="ServiceMesh API"
CORS_ORIGINS=your_array_of_whitelisted_url http://localhost:5000,http://localhost:3000,http://localhost:6000
SECRET_KEY=your_32_character_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=60
APP_ENV=local
APP_PORT=6001

# Admin Configuration
ADMIN_USERNAME=your_admin_username
ADMIN_EMAIL=your_admin_email
ADMIN_DEFAULT_PASSWORD=your_secure_password_here

# Database Configuration
DB_HOST=your_db_host #can be IP or hostname
DB_PORT=your_db_port
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DATABASE_URL=mysql+pymysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
DATABASE_MIGRATION=false

# Uptime Kuma
UPTIME_KUMA_URL=your_uptime_kuma_url
UPTIME_KUMA_USERNAME=your_uptime_kuma_username
UPTIME_KUMA_PASSWORD=your_uptime_kuma_password

# Prometheus
PROMETHEUS_URL=your_prometheus_url
